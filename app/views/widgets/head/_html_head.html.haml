%head
  %meta{ :charset => 'utf-8' }
  %meta{ 'http-equiv' => 'content-type', :content => 'text/html; charset=UTF-8' }
  %meta{ 'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
  %meta{ :name => 'description', :content => 'Marvin Danig | Resume | Personal Website | Experiments' }
  %meta{ :name => 'author', :content => 'Developer & Designer: Marvin Danig' }
  %meta{ :name => 'apple-mobile-web-app-status-bar-style', :content=>'default'}
  %meta{ :name => 'viewport', :content => 'width=device-width, initial-scale=1.0,  user-scalable=1.0, minimum-scale=1.0, maximum-scale=1.0' }
  %meta{ :name => 'apple-mobile-web-app-capable', :content => 'yes' }

  = csrf_meta_tags

  %title
    = full_title(yield(:title))

  / = render :partial => 'widgets/head/touch_icons_and_favicon'


  \/[if lte IE 8]
  %script{:src => "assets/js/ie/html5shiv.js"}
  
  %link{:href => "//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css", :rel => "stylesheet", :type => "text/css"}/
  
  / \/[if lte IE 8]
  / = stylesheet_link_tag 'ie8', media: :all, 'data-turbolinks-track' => true
  / \/[if lte IE 9]
  / = stylesheet_link_tag 'ie9', media: :all, 'data-turbolinks-track' => true
  
  = stylesheet_link_tag 'application', media: :all, 'data-turbolinks-track' => true

  = javascript_include_tag 'application'


  / Javascripts
  = render :partial => 'widgets/scripts/head_javascript_manager'